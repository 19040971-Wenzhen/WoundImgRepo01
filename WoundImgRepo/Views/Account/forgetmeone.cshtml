@model WoundImgRepo.Models.LogInUser

<form asp-controller="Account"
      asp-action="forgetmeone"
      method="post">

    <h2>Forget password</h2>

    <div class="col-sm-5">

        @*email fill in*@
        <div class="form-group row">

        </div>
        <div class="form-group row">
            <label asp-for="Username" class="control-label">Username: </label>
            <label asp-for="Username" for="Username" class="sr-only">username</label>
            <input asp-for="Username" id="Username" class="form-control" placeholder="Find Username" autofocus="" autocomplete="off">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <p></p>
        <div class="form-group row">

        </div>
        @*print error message*@

        @if (ViewData["Msg"] != null)
        {
            <div class="form-group row">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Msg"]</text>
                </div>
            </div>
        }

    </div>
    <input type="submit" class="btn btn-primary" value="Search" />
    <p></p>
    <a href="~/Account/LoginPage">Back to Login Page</a>
</form>
